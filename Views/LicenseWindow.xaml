<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.LicenseWindow"
        Title="License Validation"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Icon="/Resources/icon.ico"
        Background="#F9FAFB">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ”’ License Required"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#111827"
                       Margin="0,0,0,8"/>
            <TextBlock Text="This application requires a valid license to run."
                       FontSize="12"
                       Foreground="#6B7280"/>
        </StackPanel>

        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Hardware ID:"
                       FontSize="11"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Margin="0,0,0,4"/>
            <Border Background="White"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Padding="12,8"
                    Margin="0,0,0,16">
                <TextBlock x:Name="HardwareIdTextBlock"
                           Text="Loading..."
                           FontFamily="Consolas"
                           FontSize="10"
                           Foreground="#111827"
                           TextWrapping="Wrap"/>
            </Border>

            <TextBlock Text="Status:"
                       FontSize="11"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Margin="0,0,0,4"/>
            <Border Background="White"
                    BorderBrush="#D1D5DB"
                    BorderThickness="1"
                    Padding="12,8"
                    Margin="0,0,0,16">
                <TextBlock x:Name="StatusTextBlock"
                           Text="Validating..."
                           FontSize="11"
                           Foreground="#6B7280"
                           TextWrapping="Wrap"/>
            </Border>

            <TextBlock Text="Instructions:"
                       FontSize="11"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       Margin="0,0,0,4"/>
            <TextBlock TextWrapping="Wrap"
                       FontSize="11"
                       Foreground="#6B7280"
                       LineHeight="18"
                       Margin="0,0,0,8">
                <Run Text="1. First, log into seacuredb and go to Settings&#x0a;"/>
                <Run Text="2. Then request for a license&#x0a;"/>
                <Run Text="3. Ask or tell the admin to approve of the request&#x0a;"/>
                <Run Text="4. Once approved, click 'Restart Application' below"/>
            </TextBlock>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="CopyIdButton"
                    Content="Copy Hardware ID"
                    Width="140"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="CopyIdButton_Click"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="RestartButton"
                    Content="ðŸ”„ Restart Application"
                    Width="180"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="RestartButton_Click"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
            <Button x:Name="ExitButton"
                    Content="Exit"
                    Width="100"
                    Height="36"
                    Click="ExitButton_Click"
                    Background="#2563EB"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>

