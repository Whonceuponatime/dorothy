<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.CustomGatewayDialog"
        Title="Custom Gateway IP" 
        Icon="/Resources/icon.ico"
        Height="150" Width="300"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Enter Gateway IP:"/>
        <TextBox x:Name="GatewayIpTextBox" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="OK" Width="60" Click="OkButton_Click" Margin="0,0,5,0"/>
            <Button Content="Cancel" Width="60" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window> 