<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.ReachabilityResultsWindow"
        Title="Reachability Discovery Results" 
        Icon="/Resources/icon.ico"
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterOwner"
        Background="#F3F4F6">
    <Window.Resources>
        <!-- Default Button Style -->
        <Style x:Key="DefaultButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Reachability Discovery Results" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#111827"
                       Margin="0,0,0,8"/>
            <TextBlock x:Name="SummaryTextBlock"
                       FontSize="14" 
                       Foreground="#6B7280"/>
        </StackPanel>

        <!-- Reachability Results -->
        <Border Grid.Row="1" 
                BorderBrush="#E5E7EB" 
                BorderThickness="1" 
                CornerRadius="8"
                Background="White"
                Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Reachability Results" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#111827"
                           Margin="16,16,16,12"/>
                <DataGrid x:Name="ReachabilityResultsDataGrid" 
                          AutoGenerateColumns="False" 
                          HeadersVisibility="Column"
                          SelectionChanged="ReachabilityResultsDataGrid_SelectionChanged"
                          Margin="16,0,16,16">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Host IP" Binding="{Binding Host.HostIpString}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Label" Binding="{Binding Host.Label}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="State" Binding="{Binding State}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Open Ports" Binding="{Binding OpenPortsSummary}" Width="*" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Inferred Rules -->
        <Border Grid.Row="2" 
                BorderBrush="#E5E7EB" 
                BorderThickness="1" 
                CornerRadius="8"
                Background="White"
                Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Inferred Firewall Rules" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="#111827"
                           Margin="16,16,16,12"/>
                <DataGrid x:Name="InferredRulesDataGrid" 
                          AutoGenerateColumns="False" 
                          HeadersVisibility="Column"
                          Margin="16,0,16,16">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Host IP" Binding="{Binding Host.HostIpString}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Ports" Binding="{Binding PortExpression}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Sample Count" Binding="{Binding SampleCount}" Width="Auto" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="CloseButton" 
                    Content="Close" 
                    Width="120" 
                    Height="32"
                    Style="{StaticResource DefaultButton}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

