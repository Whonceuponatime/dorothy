<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.AboutWindow"
        Title="About SEACURE(TOOL)" 
        Icon="/Resources/icon.ico"
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#F3F4F6"
        ShowInTaskbar="False">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="About SEACURE(TOOL)"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#111827"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Application Info"
                       FontSize="12"
                       Foreground="#6B7280"
                       Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Content Card -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Product Name and Version -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock x:Name="ProductVersionText"
                                   Text="SEACURE(TOOL) - Version 2.2.3"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="VersionStatusText"
                                   Text=""
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Foreground="#059669"
                                   Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                    
                    <!-- Update Available Message -->
                    <Border x:Name="UpdateAvailableBorder"
                            Background="#DBEAFE"
                            BorderBrush="#93C5FD"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,0,0,12"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock x:Name="UpdateMessageText"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#1E40AF"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,8"/>
                            <Button x:Name="DownloadUpdateButton"
                                    Content="Download Update"
                                    Width="150"
                                    Height="32"
                                    FontSize="12"
                                    Background="#2563EB"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="DownloadUpdateButton_Click"
                                    HorizontalAlignment="Left">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="6"
                                                            Padding="12,8">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Description -->
                    <TextBlock Text="SEACURE(TOOL) is a professional network security testing tool designed for authorized penetration testing and security assessment."
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               LineHeight="20"/>

                    <!-- Features -->
                    <TextBlock Text="Attack Types"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="• TCP SYN Flood, UDP Flood, ICMP Flood&#x0a;• ARP Spoofing&#x0a;• Ethernet-level attacks (Unicast, Multicast, Broadcast)&#x0a;• NMEA 0183 UDP attacks (Unicast, Multicast)"
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"
                               LineHeight="20"/>
                    
                    <TextBlock Text="Capabilities"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="• Configurable attack rates and parameters&#x0a;• Real-time statistics and logging&#x0a;• Network interface selection and gateway routing&#x0a;• Network scanning and asset inventory"
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"
                               LineHeight="20"/>
                    
                    <TextBlock Text="Integration"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="• Cloud sync with Supabase&#x0a;• Security logs with export capabilities"
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               LineHeight="20"/>

                    <!-- Authorized Use Reminder -->
                    <Border Background="#FEF3C7"
                            BorderBrush="#FDE68A"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,8,0,0">
                        <TextBlock Text="⚠️ Authorized Use Only&#x0a;This tool is for AUTHORIZED TESTING ONLY. Use only in controlled lab/test environments. Unauthorized use may be illegal and result in disciplinary or legal action."
                                   FontSize="11"
                                   Foreground="#92400E"
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </Border>

                    <!-- Website Link -->
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <TextBlock Text="For more information, visit: " 
                                   FontSize="12" 
                                   Foreground="#6B7280"/>
                        <Button x:Name="WebsiteLink"
                                Content="https://www.sea-net.co.kr/seacure"
                                FontSize="12"
                                Foreground="#2563EB"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="4,0"
                                Cursor="Hand"
                                Click="WebsiteLink_Click"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>

                    <!-- Footer Separator -->
                    <Border BorderBrush="#E5E7EB"
                            BorderThickness="0,1,0,0"
                            Margin="0,20,0,12"/>

                    <!-- Copyright -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,0">
                        <TextBlock Text="Copyright(C) SeaNet Co., Ltd. All right reserved" 
                                   FontSize="10" 
                                   Foreground="#9CA3AF"
                                   HorizontalAlignment="Center"/>
                        <Button Content="www.sea-net.co.kr/seacure"
                                FontSize="10"
                                Foreground="#2563EB"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0"
                                Cursor="Hand"
                                Click="WebsiteLink_Click"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="TextDecorations" Value="Underline"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer with Close Button -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="CloseButton"
                        Content="Close"
                        Width="100"
                        Height="36"
                        Click="CloseButton_Click"
                        Background="#111827"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Template">
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="12,8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter>
                        </Style>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#1F2937"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#0F172A"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

