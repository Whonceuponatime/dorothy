<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Dorothy.Views"
        x:Class="Dorothy.Views.AssetSyncWindow"
        Title="Sync Assets to Cloud" 
        Icon="/Resources/icon.ico"
        Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#F3F4F6">
    <Window.Resources>
        <Style x:Key="DefaultButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2563EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Sync Assets to Cloud"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#111827"
                       Margin="0,0,0,8"/>
            <TextBlock Text="Select assets to sync to Supabase or delete from local database."
                       FontSize="12"
                       Foreground="#6B7280"/>
        </StackPanel>

        <!-- Project Name -->
        <StackPanel Grid.Row="0" Margin="0,60,0,12" Orientation="Horizontal">
            <TextBlock Text="Project Name:"
                       FontSize="13"
                       FontWeight="SemiBold"
                       Foreground="#374151"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>
            <TextBox x:Name="ProjectNameTextBox"
                     Width="300"
                     Height="32"
                     Padding="8,6"
                     BorderBrush="#D1D5DB"
                     BorderThickness="1"
                     Background="White"
                     FontSize="12"
                     TextChanged="ProjectNameTextBox_TextChanged"/>
        </StackPanel>

        <!-- Assets Grid -->
        <Border Grid.Row="1"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Background="White"
                Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Select All Checkbox -->
                <CheckBox x:Name="SelectAllCheckBox"
                          Content="Select All"
                          FontSize="12"
                          Margin="12,8"
                          Checked="SelectAllCheckBox_Checked"
                          Unchecked="SelectAllCheckBox_Unchecked"/>

                <!-- DataGrid -->
                <DataGrid x:Name="AssetsDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          SelectionMode="Extended"
                          >
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="" Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="IP Address" Binding="{Binding HostIp}" Width="120"/>
                        <DataGridTextColumn Header="Hostname" Binding="{Binding HostName}" Width="150"/>
                        <DataGridTextColumn Header="MAC Address" Binding="{Binding MacAddress}" Width="130"/>
                        <DataGridTextColumn Header="Vendor" Binding="{Binding Vendor}" Width="120"/>
                        <DataGridTextColumn Header="Status" Width="80">
                            <DataGridTextColumn.Binding>
                                <Binding Path="IsOnline">
                                    <Binding.Converter>
                                        <local:BoolToStatusConverter/>
                                    </Binding.Converter>
                                </Binding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Ports" Binding="{Binding OpenPortsDisplay}" Width="150"/>
                        <DataGridTextColumn Header="Ping (ms)" Binding="{Binding PingTime}" Width="80"/>
                        <DataGridTextColumn Header="Scan Time" Binding="{Binding ScanTime, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="SelectedCountText"
                       Text="0 of 0 selected"
                       FontSize="12"
                       Foreground="#6B7280"
                       VerticalAlignment="Center"
                       Margin="0,0,16,0"/>
            <Button x:Name="DeleteSelectedButton"
                    Content="Delete Selected"
                    Width="130"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="DeleteSelectedButton_Click"
                    Style="{StaticResource DefaultButton}"/>
            <Button x:Name="SkipSelectedButton"
                    Content="Skip Selected"
                    Width="120"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="SkipSelectedButton_Click"
                    Style="{StaticResource DefaultButton}"/>
            <Button x:Name="SyncButton"
                    Content="Sync Selected"
                    Width="120"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="SyncButton_Click"
                    Style="{StaticResource PrimaryButton}"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="36"
                    Click="CancelButton_Click"
                    Style="{StaticResource DefaultButton}"/>
        </StackPanel>
    </Grid>
</Window>

