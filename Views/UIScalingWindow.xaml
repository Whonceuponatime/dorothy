<Window x:Class="Dorothy.Views.UIScalingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UI Scaling Settings" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="UI Scale Settings" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <!-- Scale Controls -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Scale Factor:" 
                       FontSize="14" 
                       Margin="0,0,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                        Content="-" 
                        Width="40" 
                        Height="40" 
                        Margin="0,0,10,0"
                        Click="ZoomOutButton_Click"/>
                
                <Slider x:Name="ScaleSlider" 
                        Grid.Column="1" 
                        Minimum="0.5" 
                        Maximum="2.0" 
                        Value="1.0" 
                        TickFrequency="0.1" 
                        IsSnapToTickEnabled="True"
                        ValueChanged="ScaleSlider_ValueChanged"
                        VerticalAlignment="Center"/>
                
                <Button Grid.Column="2" 
                        Content="+" 
                        Width="40" 
                        Height="40" 
                        Margin="10,0,0,0"
                        Click="ZoomInButton_Click"/>
            </Grid>

            <TextBlock x:Name="ScaleValueText" 
                       Text="100%" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center" 
                       Margin="0,15,0,0"/>

            <TextBlock Text="Keyboard Shortcuts:" 
                       FontSize="12" 
                       Foreground="Gray" 
                       Margin="0,30,0,10"/>
            <TextBlock Text="Ctrl + Plus: Zoom In" 
                       FontSize="11" 
                       Foreground="Gray" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Ctrl + Minus: Zoom Out" 
                       FontSize="11" 
                       Foreground="Gray" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Ctrl + 0: Reset Zoom" 
                       FontSize="11" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Reset" 
                    Width="80" 
                    Height="32" 
                    Margin="0,0,10,0"
                    Click="ResetButton_Click"/>
            <Button Content="Close" 
                    Width="80" 
                    Height="32"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>






