<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.DisclaimerDialog"
        Title="Advanced Settings – Authorization Required" 
        Icon="/Resources/icon.ico"
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#F3F4F6"
        ShowInTaskbar="False">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Advanced Settings – Authorization Required"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#111827"
                       Margin="0,0,0,4"/>
            <TextBlock Text="Authorization Notice"
                       FontSize="12"
                       Foreground="#6B7280"
                       Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Content Card -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Warning Chip -->
                    <Border Background="#FEF3C7"
                            BorderBrush="#FDE68A"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16"
                            Margin="0,0,0,24"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚠️"
                                       FontSize="20"
                                       Margin="0,0,12,0"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Restricted Area – Authorized Operations Only"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#92400E"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Main Paragraph -->
                    <TextBlock FontSize="13"
                               Foreground="#374151"
                               TextWrapping="Wrap"
                               LineHeight="24"
                               Margin="0,0,0,20">
                        <Run Text="This section of the application is intended " FontSize="13"/>
                        <Run Text="only for authorized operations" FontSize="13" FontWeight="Bold" Foreground="#DC2626"/>
                        <Run Text=" and is " FontSize="13"/>
                        <Run Text="not to be used for testing or experimentation" FontSize="13" FontWeight="Bold" Foreground="#DC2626"/>
                        <Run Text=". Use of these functions without proper authorization is " FontSize="13"/>
                        <Run Text="strictly prohibited" FontSize="13" FontWeight="Bold" Foreground="#DC2626"/>
                        <Run Text="." FontSize="13"/>
                        <LineBreak/><LineBreak/>
                        <Run Text="Before using this tool, you " FontSize="13"/>
                        <Run Text="must obtain an official written authorization letter" FontSize="13" FontWeight="Bold" Foreground="#DC2626"/>
                        <Run Text=" from all related organizations or stakeholders and submit it to the system administrator. " FontSize="13"/>
                        <Run Text="Do not proceed unless you have received explicit confirmation of approval" FontSize="13" FontWeight="Bold" Foreground="#DC2626"/>
                        <Run Text="." FontSize="13"/>
                    </TextBlock>

                    <!-- Legal Notice -->
                    <Border Background="#F9FAFB"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16"
                            Margin="0,8,0,0">
                        <TextBlock FontSize="12"
                                   Foreground="#6B7280"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   LineHeight="20">
                            <Run Text="Unauthorized use " FontWeight="Bold" Foreground="#DC2626"/>
                            <Run Text="may be illegal and is " FontWeight="SemiBold"/>
                            <Run Text="strictly prohibited" FontWeight="Bold" Foreground="#DC2626"/>
                            <Run Text="." FontWeight="SemiBold"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer with Buttons -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="BackButton"
                        Content="Back"
                        Width="120"
                        Height="42"
                        FontSize="14"
                        Margin="0,0,12,0"
                        Click="BackButton_Click"
                        Background="#F3F4F6"
                        Foreground="#374151"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="12,8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Styles>
                </Button>
                <Button x:Name="ContinueButton"
                        Content="Acknowledged"
                        Width="180"
                        Height="42"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Click="ContinueButton_Click"
                        Background="#111827"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="12,8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1F2937"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#0F172A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

