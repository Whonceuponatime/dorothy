<Window x:Class="Dorothy.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="450" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="500"
        Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#111827"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <StackPanel>
            <!-- Log File Location -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Log File Location"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="LogLocationTextBox"
                                 Grid.Column="0"
                                 Height="32"
                                 Padding="8,6"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="White"
                                 Margin="0,0,8,0"
                                 IsReadOnly="True"/>
                        <Button x:Name="BrowseLogLocationButton"
                                Grid.Column="1"
                                Content="Browse..."
                                Width="80"
                                Height="32"
                                Click="BrowseLogLocationButton_Click"/>
                    </Grid>
                    <TextBlock Text="Default: Application installation directory"
                               FontSize="11"
                               FontStyle="Italic"
                               Foreground="#9CA3AF"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- UI Preferences -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="UI Preferences"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,12"/>
                    
                    <!-- Font Size -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Font Size"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="FontSizeComboBox"
                                  Height="32"
                                  SelectedIndex="1">
                            <ComboBoxItem Content="Small (11px)"/>
                            <ComboBoxItem Content="Medium (12px)"/>
                            <ComboBoxItem Content="Large (14px)"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Theme -->
                    <StackPanel>
                        <TextBlock Text="Theme"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="ThemeComboBox"
                                  Height="32"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Light (Default)"/>
                            <ComboBoxItem Content="Dark (Coming Soon)"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Cloud Sync Settings -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,12,0,0">
                <StackPanel>
                    <TextBlock Text="Cloud Sync (Supabase)"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Configure Supabase to enable cloud sync of attack logs. Leave empty to use offline mode only."
                               FontSize="11"
                               Foreground="#6B7280"
                               Margin="0,0,0,16"
                               TextWrapping="Wrap"/>
                    
                    <!-- Supabase URL -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Supabase URL"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="SupabaseUrlTextBox"
                                 Height="32"
                                 Padding="8,6"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="White"
                                 TextChanged="SupabaseUrlTextBox_TextChanged"/>
                        <TextBlock Text="Example: https://your-project.supabase.co"
                                   FontSize="10"
                                   FontStyle="Italic"
                                   Foreground="#9CA3AF"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Supabase Anon Key -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Supabase Anon Key"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <PasswordBox x:Name="SupabaseAnonKeyPasswordBox"
                                         Grid.Column="0"
                                         Height="32"
                                         Padding="8,6"
                                         BorderBrush="#D1D5DB"
                                         BorderThickness="1"
                                         Background="White"
                                         PasswordChanged="SupabaseAnonKeyTextBox_PasswordChanged"
                                         Margin="0,0,8,0"/>
                            <TextBox x:Name="SupabaseAnonKeyTextBox"
                                     Grid.Column="0"
                                     Height="32"
                                     Padding="8,6"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     Background="White"
                                     TextChanged="SupabaseAnonKeyTextBox_TextChanged"
                                     Margin="0,0,8,0"
                                     Visibility="Collapsed"/>
                            <Button x:Name="TogglePasswordVisibilityButton"
                                    Grid.Column="1"
                                    Width="32"
                                    Height="32"
                                    Padding="0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="TogglePasswordVisibilityButton_Click"
                                    ToolTip="Show/Hide API Key">
                                <TextBlock Text="ðŸ‘"
                                           FontSize="14"
                                           Foreground="#6B7280"/>
                            </Button>
                        </Grid>
                        <TextBlock Text="Your Supabase project's anonymous key"
                                   FontSize="10"
                                   FontStyle="Italic"
                                   Foreground="#9CA3AF"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Test Connection Button -->
                    <Button x:Name="TestConnectionButton"
                            Content="Test Connection"
                            Width="140"
                            Height="32"
                            HorizontalAlignment="Left"
                            Click="TestConnectionButton_Click"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            Background="White"
                            Foreground="#374151"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="12,6"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="Foreground" Value="#374151"/>
                                <Setter Property="BorderBrush" Value="#D1D5DB"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="6"
                                                    Padding="12,6">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#F3F4F6"/>
                                        <Setter Property="Foreground" Value="#9CA3AF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <TextBlock x:Name="TestConnectionResultText"
                               Text=""
                               FontSize="11"
                               Foreground="#059669"
                               Margin="0,8,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="100"
                    Height="36"
                    Click="SaveButton_Click"
                    Background="#111827"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>

