<Window x:Class="Dorothy.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="450" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="500"
        Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#111827"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <StackPanel>
            <!-- Log File Location -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Log File Location"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="LogLocationTextBox"
                                 Grid.Column="0"
                                 Height="32"
                                 Padding="8,6"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="White"
                                 Margin="0,0,8,0"
                                 IsReadOnly="True"/>
                        <Button x:Name="BrowseLogLocationButton"
                                Grid.Column="1"
                                Content="Browse..."
                                Width="80"
                                Height="32"
                                Click="BrowseLogLocationButton_Click"/>
                    </Grid>
                    <TextBlock Text="Default: Application installation directory"
                               FontSize="11"
                               Foreground="#6B7280"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- UI Preferences -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="UI Preferences"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,12"/>
                    
                    <!-- Font Size -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Font Size"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="FontSizeComboBox"
                                  Height="32"
                                  SelectedIndex="1">
                            <ComboBoxItem Content="Small (11px)"/>
                            <ComboBoxItem Content="Medium (12px)"/>
                            <ComboBoxItem Content="Large (14px)"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Theme -->
                    <StackPanel>
                        <TextBlock Text="Theme"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="ThemeComboBox"
                                  Height="32"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Light (Default)"/>
                            <ComboBoxItem Content="Dark (Coming Soon)"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="100"
                    Height="36"
                    Click="SaveButton_Click"
                    Background="#111827"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>

