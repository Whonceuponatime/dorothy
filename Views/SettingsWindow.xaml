<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.SettingsWindow"
        Title="Settings" 
        Icon="/Resources/icon.ico"
        Height="450" 
        Width="550"
        WindowStartupLocation="CenterOwner"
        CanResize="True"
        MinHeight="400"
        MinWidth="500"
        Background="#F3F4F6">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Settings"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#111827"
                   Margin="0,0,0,20"/>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <StackPanel>
            <!-- Log File Location -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Log File Location"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="LogLocationTextBox"
                                 Grid.Column="0"
                                 Height="32"
                                 Padding="8,6"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="White"
                                 Margin="0,0,8,0"
                                 IsReadOnly="True"/>
                        <Button x:Name="BrowseLogLocationButton"
                                Grid.Column="1"
                                Content="Browse..."
                                Width="80"
                                Height="32"
                                Click="BrowseLogLocationButton_Click"/>
                    </Grid>
                    <TextBlock Text="Default: Application installation directory"
                               FontSize="10"
                               Foreground="#9CA3AF"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- UI Preferences -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <StackPanel>
                    <TextBlock Text="UI Preferences"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,12"/>
                    
                    <!-- Font Size -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Font Size (8-24px)"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="FontSizeTextBox"
                                     Grid.Column="0"
                                     Height="32"
                                     Padding="8,6"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     Background="White"
                                     Margin="0,0,8,0"
                                     TextInput="FontSizeTextBox_OnTextInput"
                                     TextChanged="FontSizeTextBox_TextChanged"/>
                            <TextBlock Grid.Column="1"
                                       Text="px"
                                       FontSize="12"
                                       Foreground="#6B7280"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,0"/>
                        </Grid>
                        <TextBlock Text="Enter a custom font size between 8 and 24 pixels"
                                   FontSize="10"
                                   Foreground="#9CA3AF"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Theme -->
                    <StackPanel>
                        <TextBlock Text="Theme"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <ComboBox x:Name="ThemeComboBox"
                                  Height="32"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Light (Default)"/>
                            <ComboBoxItem Content="Dark (Coming Soon)"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Cloud Sync Settings -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,12,0,0">
                <StackPanel>
                    <TextBlock Text="Cloud Sync (Supabase)"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Supabase cloud sync is pre-configured. All attack logs and assets are automatically synced to the cloud database."
                               FontSize="11"
                               Foreground="#6B7280"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap"/>
                    <Border Background="#ECFDF5"
                            BorderBrush="#A7F3D0"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="✓ Pre-Configured"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#059669"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Supabase credentials are built-in and secured. The anon key is obfuscated and protected by Row Level Security (RLS) policies on the server. Your data is protected by hardware-based licensing."
                                       FontSize="10"
                                       Foreground="#047857"
                                       TextWrapping="Wrap"
                                       LineHeight="16"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Display (Read-Only) -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Connection Status"
                                   FontSize="12"
                                   Foreground="#374151"
                                   Margin="0,0,0,4"/>
                        <Border Background="#F9FAFB"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="12,8">
                            <StackPanel>
                                <TextBlock x:Name="SupabaseUrlTextBlock"
                                           Text="Supabase URL: Loading..."
                                           FontFamily="Consolas"
                                           FontSize="10"
                                           Foreground="#6B7280"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="Status: Pre-configured ✓"
                                           FontSize="10"
                                           Foreground="#059669"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Test Connection (Always uses hardcoded credentials) -->
                    <TextBlock Text="Note: Supabase credentials are hardcoded for security and ease of distribution. Connection is automatically verified on application startup."
                               FontSize="10"
                               Foreground="#6B7280"
                               FontStyle="Italic"
                               TextWrapping="Wrap"
                               Margin="0,0,0,8"/>
                    <Border Background="#FEF3C7"
                            BorderBrush="#FDE047"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10"
                            Margin="0,8,0,0">
                        <StackPanel>
                            <TextBlock Text="[i] Security Information"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="#92400E"
                                       Margin="0,0,0,4"/>
                            <TextBlock FontSize="10"
                                       Foreground="#78350F"
                                       TextWrapping="Wrap"
                                       LineHeight="16">
                                <Run Text="The Supabase anon key is obfuscated within the application code. While it can be extracted through reverse engineering, this is safe by design:"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="• Supabase anon keys are meant to be public (used in web/mobile apps)"/>
                                <LineBreak/>
                                <Run Text="• Security relies on Row Level Security (RLS) policies (server-side)"/>
                                <LineBreak/>
                                <Run Text="• Hardware licensing prevents unauthorized application use"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="See SECURITY.md for detailed information."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- License Management -->
            <Border Background="White"
                    BorderBrush="#E5E7EB"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,12,0,0">
                <StackPanel>
                    <TextBlock Text="License Status"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,8"/>
                    <TextBlock Text="Licenses are centrally managed by the administrator through Supabase."
                               FontSize="11"
                               Foreground="#6B7280"
                               Margin="0,0,0,16"
                               TextWrapping="Wrap"/>

                    <!-- Current Hardware ID -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Your Hardware ID"
                                   FontSize="12"
                                   Foreground="#374151"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,4"/>
                        <Border Background="#F9FAFB"
                                BorderBrush="#D1D5DB"
                                BorderThickness="1"
                                Padding="12,8"
                                Margin="0,0,0,8">
                            <StackPanel>
                            <TextBlock x:Name="CurrentHardwareIdTextBlock"
                                       Text="Loading..."
                                       FontFamily="Consolas"
                                       FontSize="10"
                                       Foreground="#111827"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,4"/>
                                <Button Content="Copy to Clipboard"
                                        FontSize="10"
                                        Padding="8,4"
                                        HorizontalAlignment="Left"
                                        Background="#F3F4F6"
                                        BorderBrush="#D1D5DB"
                                        BorderThickness="1"
                                        Cursor="Hand"
                                        Click="CopyHardwareIdButton_Click"/>
                            </StackPanel>
                        </Border>
                        <TextBlock x:Name="LicenseStatusTextBlock"
                                   Text="Checking..."
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#6B7280"
                                   Margin="0,8,0,4"/>
                        <TextBlock x:Name="LicenseMessageTextBlock"
                                   Text=""
                                   FontSize="10"
                                   Foreground="#6B7280"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,0"/>
                    </StackPanel>

                    <!-- Instructions for Users -->
                    <Border Background="#EFF6FF"
                            BorderBrush="#BFDBFE"
                            BorderThickness="1"
                            Padding="16"
                            CornerRadius="6">
                        <StackPanel>
                            <TextBlock Text="[?] License Not Authorized?"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="#1E40AF"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#1E3A8A"
                                       LineHeight="18">
                                <Run Text="To request a license for this machine:"/>
                                <LineBreak/><LineBreak/>
                                <Run Text="1. First, log into seacuredb and go to Settings"/>
                                <LineBreak/>
                                <Run Text="2. Then request for a license"/>
                                <LineBreak/>
                                <Run Text="3. Ask or tell the admin to approve of the request"/>
                                <LineBreak/>
                                <Run Text="4. Once approved, restart the application"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Admin Info -->
                    <Border Background="#F9FAFB"
                            BorderBrush="#E5E7EB"
                            BorderThickness="1"
                            Padding="12"
                            CornerRadius="6"
                            Margin="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="[i] Centralized License Control"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#374151"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="All licenses are managed through Supabase by the administrator. Users cannot self-authorize to ensure security and compliance."
                                   FontSize="10"
                                   Foreground="#6B7280"
                                       TextWrapping="Wrap"/>
                    </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button x:Name="CancelButton"
                    Content="Cancel"
                    Width="100"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Width="100"
                    Height="36"
                    Click="SaveButton_Click"
                    Background="#111827"
                    Foreground="White"
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
