<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.DisclaimerWindow"
        Title="Authorized Use Only" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Background="#F3F4F6"
        ShowInTaskbar="False">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <TextBlock Text="⚠️"
                           FontSize="24"
                           Margin="0,0,12,0"
                           VerticalAlignment="Center"/>
                <StackPanel>
                    <TextBlock Text="Authorized Use Only"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#111827"/>
                    <Border Background="#FEF3C7"
                            CornerRadius="4"
                            Padding="6,2"
                            HorizontalAlignment="Left"
                            Margin="0,4,0,0">
                        <TextBlock Text="Legal Notice"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="#92400E"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- Content Card -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="This is a DoS (Denial of Service) Testing Program"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,12"/>

                    <TextBlock Text="Purpose"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="This tool is designed for authorized network testing in controlled laboratory environments with explicit permission."
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               LineHeight="24"/>

                    <TextBlock Text="Authorized Use"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="• Controlled testing environments only&#x0a;• With explicit written permission from network owners&#x0a;• For legitimate security assessment purposes"
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               LineHeight="24"/>

                    <TextBlock Text="Responsibility"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="By using this program, you acknowledge that you have the necessary authorization and accept full responsibility for your actions."
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"
                               LineHeight="24"/>
                    
                    <!-- Risk Emphasis -->
                    <TextBlock Text="Unauthorized use may be illegal and result in disciplinary or legal action."
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#991B1B"
                               TextWrapping="Wrap"
                               Margin="0,8,0,16"
                               LineHeight="24"/>

                    <Border Background="#FEF2F2"
                            BorderBrush="#FECACA"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,8,0,0">
                        <TextBlock Text="SeaNet and its affiliates assume no responsibility for any misuse, unauthorized access, or damages resulting from the use of this program."
                                   FontSize="11"
                                   Foreground="#991B1B"
                                   TextWrapping="Wrap"
                                   LineHeight="18"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Footer with Checkbox and Buttons -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <CheckBox x:Name="DontShowAgainCheckBox"
                      Content="Don't show this again on this machine"
                      FontSize="11"
                      Foreground="#6B7280"
                      Margin="0,0,0,16"
                      IsChecked="False"/>
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="ExitButton"
                        Content="Exit"
                        Width="100"
                        Height="36"
                        Margin="0,0,8,0"
                        Click="ExitButton_Click"
                        Style="{StaticResource DefaultButton}"/>
                <Button x:Name="AcceptButton"
                        Content="I Accept"
                        Width="120"
                        Height="36"
                        Click="AcceptButton_Click"
                        Background="#111827"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="12,8">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

