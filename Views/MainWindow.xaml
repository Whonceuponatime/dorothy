<Window x:Class="Dorothy.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Attack Simulator - SeaNet" Height="700" Width="800"
        MinHeight="700" MinWidth="800">
    
    <Window.Resources>
        <ResourceDictionary Source="/Dorothy;component/Resources/Styles.xaml"/>
    </Window.Resources>

    <StackPanel Margin="15">
        <GroupBox Header="Attack Configuration" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Attack Type:" Style="{StaticResource DefaultLabel}"/>
                <ComboBox x:Name="AttackTypeComboBox" Grid.Row="0" Grid.Column="1" Margin="5">
                    <ComboBoxItem Content="UDP Flood"/>
                    <ComboBoxItem Content="ICMP Flood"/>
                    <ComboBoxItem Content="TCP SYN Flood"/>
                </ComboBox>

                <Label Grid.Row="1" Grid.Column="0" Content="Target IP:" Style="{StaticResource DefaultLabel}"/>
                <TextBox x:Name="TargetIpTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DefaultTextBox}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Target Port:" Style="{StaticResource DefaultLabel}"/>
                <TextBox x:Name="TargetPortTextBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource DefaultTextBox}"/>

                <Label Grid.Row="3" Grid.Column="0" Content="Mbps:" Style="{StaticResource DefaultLabel}"/>
                <TextBox x:Name="MegabitsPerSecondTextBox" Grid.Row="3" Grid.Column="1" Style="{StaticResource DefaultTextBox}"/>
            </Grid>
        </GroupBox>

        <GroupBox Header="Network Interface" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Interface:" Style="{StaticResource DefaultLabel}"/>
                <ComboBox x:Name="NetworkInterfaceComboBox" Grid.Row="0" Grid.Column="1" 
                          SelectionChanged="NetworkInterfaceComboBox_SelectionChanged" Margin="5"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Source IP:" Style="{StaticResource DefaultLabel}"/>
                <TextBox x:Name="SourceIpTextBox" Grid.Row="1" Grid.Column="1" IsReadOnly="True" 
                         Style="{StaticResource DefaultTextBox}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="MAC Address:" Style="{StaticResource DefaultLabel}"/>
                <TextBox x:Name="SourceMacTextBox" Grid.Row="2" Grid.Column="1" IsReadOnly="True" 
                         Style="{StaticResource DefaultTextBox}"/>
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="StartButton" Content="Start Attack" Style="{StaticResource DefaultButton}" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="Stop Attack" IsEnabled="False" Style="{StaticResource DefaultButton}" Click="StopButton_Click"/>
            <Button x:Name="PingButton" Content="Ping Target" Style="{StaticResource DefaultButton}" Click="PingButton_Click"/>
            <TextBlock x:Name="PingResultText" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <Label x:Name="StatusLabel" Content="Status: Ready" HorizontalAlignment="Center"/>

        <GroupBox Header="Log Output" Margin="0,10,0,0">
            <TextBox x:Name="LogTextBox" 
                     Height="300" 
                     IsReadOnly="True" 
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Style="{StaticResource DefaultTextBox}"/>
        </GroupBox>
    </StackPanel>
</Window> 