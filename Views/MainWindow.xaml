<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dorothy.Views.MainWindow"
        Title="SEACURE(TOOL) - Network Attack Simulator" 
        Icon="/Resources/icon.ico"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        MinWidth="800"
        MinHeight="600"
        FontFamily="Segoe UI"
        FontSize="12"
        Background="#F3F4F6"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown"
        SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="DefaultTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern Label Style -->
        <Style x:Key="DefaultLabel" TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <!-- Default Button Style -->
        <Style x:Key="DefaultButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E5E7EB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#D1D5DB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F3F4F6"/>
                    <Setter Property="Foreground" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Primary Button Style - Navy (SEACURE Brand) -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource DefaultButton}">
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#111827"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F2937"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#0F172A"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#9CA3AF"/>
                    <Setter Property="BorderBrush" Value="#9CA3AF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style (replaces GroupBox) - White cards on light grey -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>

        <!-- Card Header Style -->
        <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Status Badge Style - Ready/Idle -->
        <Style x:Key="StatusBadgeReady" TargetType="Border">
            <Setter Property="Background" Value="#D1FAE5"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Status Badge Style - Attacking -->
        <Style x:Key="StatusBadgeAttacking" TargetType="Border">
            <Setter Property="Background" Value="#FEE2E2"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Status Badge Style - Error -->
        <Style x:Key="StatusBadgeError" TargetType="Border">
            <Setter Property="Background" Value="#FEE2E2"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Status Badge Text Style -->
        <Style x:Key="StatusBadgeText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="DefaultComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="32"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2563EB"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TabControl Style -->
        <Style x:Key="DefaultTabControl" TargetType="TabControl">
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Modern CheckBox Style -->
        <Style x:Key="DefaultCheckBox" TargetType="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Main Content -->
        <Grid Grid.Row="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="60"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Main content -->
        </Grid.RowDefinitions>

        <!-- HEADER BAR -->
        <Border Grid.Row="0"
                Background="#F3F4F6"
                Padding="16,12"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,0,1"
                Height="Auto"
                x:Name="HeaderBar">
            <Grid>
        <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: LOGO -->
                <Image Grid.Column="0"
                       x:Name="LogoImage"
                       Source="/Resources/logo.png"
                       Height="160"
                       Stretch="Uniform"
                       VerticalAlignment="Center"
                       Margin="0,0,16,0"/>

                <!-- TITLE + SUBTITLE + LAB MODE -->
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            VerticalAlignment="Center"
                            Margin="0,0,24,0">
                    <TextBlock Text="Network Attack Simulator"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#111827"
                               Margin="0,0,0,2"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <TextBlock Text="Cyber Security Solution by SEANET"
                                   FontSize="12"
                                   Foreground="#6B7280"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <!-- Lab Mode Tag -->
                        <Border x:Name="LabModeBadge"
                                Background="#FEF3C7"
                                BorderBrush="#F59E0B"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="8,2"
                                VerticalAlignment="Center">
                            <TextBlock x:Name="LabModeText"
                                       Text="LAB MODE"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="#92400E"/>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- STATISTICS PANEL -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="0,0,16,0">
                    <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                        <TextBlock Text="Packets Sent"
                                   FontSize="10"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,2"/>
                        <TextBlock x:Name="PacketsSentText"
                                   Text="0"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                        <TextBlock Text="Elapsed Time"
                                   FontSize="10"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,2"/>
                        <TextBlock x:Name="ElapsedTimeText"
                                   Text="00:00:00"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                        <TextBlock Text="Mbps Sent"
                                   FontSize="10"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,2"/>
                        <TextBlock x:Name="MbpsSentText"
                                   Text="0.00"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"/>
                    </StackPanel>
                    <!-- Separator between real-time stats and Profile -->
                    <Border Width="1" 
                            Height="32" 
                            Background="#E5E7EB" 
                            Margin="8,0,8,0"
                            VerticalAlignment="Center"/>
                    <!-- PROFILE SUMMARY -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                        <TextBlock Text="Profile"
                                   FontSize="10"
                                   Foreground="#6B7280"
                                   Margin="0,0,0,2"/>
                        <TextBlock x:Name="ProfileSummaryText"
                                   Text=""
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#111827"/>
                    </StackPanel>
                </StackPanel>

                <!-- ICON TOOLBAR -->
                <StackPanel Grid.Row="0" Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="0,0,12,0">
                    <Button x:Name="CloudSyncButton"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Cloud Sync"
                            Click="CloudSyncButton_Click"
                            Margin="0,0,4,0">
                        <Grid>
                            <TextBlock Text="☁️"
                                       FontSize="20"
                                       Foreground="#6B7280"/>
                            <Border x:Name="CloudSyncNotificationBadge"
                                    Background="#EF4444"
                                    CornerRadius="10"
                                    MinWidth="18"
                                    Height="18"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-6,-6,0"
                                    Padding="4,2"
                                    IsVisible="False">
                                <TextBlock x:Name="CloudSyncNotificationText"
                                           Text="0"
                                           Foreground="White"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Margin="0"/>
                            </Border>
                        </Grid>
                    </Button>
                    <Button x:Name="SettingsButton"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Settings"
                            Click="SettingsButton_Click">
                        <Viewbox Width="18" Height="18">
                            <Canvas Width="24" Height="24">
                                <Path Fill="#6B7280" Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                            </Canvas>
                        </Viewbox>
                    </Button>
                    <Button x:Name="HelpButton"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Help / About"
                            Margin="4,0,0,0"
                            Click="HelpButton_Click">
                        <Grid>
                            <TextBlock Text="ℹ️"
                                       FontSize="20"
                                       Foreground="#6B7280"/>
                            <Border x:Name="UpdateAvailableBadge"
                                    Background="#EF4444"
                                    BorderBrush="White"
                                    BorderThickness="2"
                                    CornerRadius="8"
                                    Width="12"
                                    Height="12"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-2,-2,0"
                                    Visibility="Collapsed"/>
                        </Grid>
                    </Button>
                </StackPanel>

                <!-- RIGHT: STATUS BADGE -->
                <Border x:Name="StatusBadge" 
                        Grid.Column="4"
                        Background="#D1FAE5"
                        CornerRadius="999"
                        Padding="12,6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Height="32">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="StatusDot"
                                 Width="8" 
                                 Height="8"
                                 Fill="#059669"
                                 Margin="0,0,6,0"/>
                        <TextBlock x:Name="StatusBadgeText" 
                                   Text="Ready"
                                   Style="{StaticResource StatusBadgeText}"
                                   Foreground="#059669"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1" Margin="16" x:Name="MainContentGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel: Configuration Tabs -->
        <TabControl x:Name="MainTabControl" 
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Margin="0,0,12,0"
                    SelectionChanged="MainTabControl_SelectionChanged"
                    BorderThickness="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Style="{StaticResource DefaultTabControl}">
            <TabItem Header="Basic Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,2,0,0" HorizontalAlignment="Stretch">
                    <StackPanel Grid.IsSharedSizeScope="True" HorizontalAlignment="Stretch">
                        <!-- Network Configuration Card -->
                        <Border Style="{StaticResource CardStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,12">
                            <StackPanel HorizontalAlignment="Stretch">
                                <TextBlock Text="Network Configuration" Style="{StaticResource CardHeaderStyle}"/>
                                <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="NIC:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                            <ComboBox x:Name="NetworkInterfaceComboBox" 
                                      Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                      Style="{StaticResource DefaultComboBox}"
                                              Margin="0,0,0,8"
                                      SelectionChanged="NetworkInterfaceComboBox_SelectionChanged"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Source IP:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="SourceIpTextBox" 
                                             Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,8,8"
                                    TextChanged="SourceIpTextBox_TextChanged"/>
                                    <Button x:Name="RefreshSourceIpButton" 
                                            Grid.Row="1" Grid.Column="2"
                                            Content="Refresh" 
                                            Width="80" 
                                            Height="32"
                                            Style="{StaticResource DefaultButton}"
                                            Margin="0,0,0,8"
                                            Click="RefreshSourceIpButton_Click"
                                            ToolTip="Refresh source IP from selected network interface"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Source MAC:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="SourceMacTextBox" 
                                             Grid.Row="2" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,0,8"
                                    IsReadOnly="True"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="Gateway IP:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                    <TextBox x:Name="GatewayIpTextBox" 
                                             Grid.Row="3" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,0,0"
                                    TextChanged="GatewayIpTextBox_TextChanged"/>
                        </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Target Configuration Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Target Configuration" Style="{StaticResource CardHeaderStyle}"/>
                                <Grid>
                            <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Target IP:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="TargetIpTextBox" 
                                             Grid.Row="0" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,8,8"
                                    TextChanged="TargetIpTextBox_TextChanged"/>
                                    <Button x:Name="PingButton" 
                                            Grid.Row="0" Grid.Column="2"
                                            Content="Ping" 
                                            Width="80" 
                                            Height="32"
                                    Style="{StaticResource DefaultButton}"
                                            Margin="0,0,0,8"
                                    Click="PingButton_Click"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Target MAC:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="TargetMacTextBox" 
                                             Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,8,8"
                                    IsReadOnly="True"
                                    TextChanged="TargetMacTextBox_TextChanged"/>
                                    <Button x:Name="ResolveMacButton" 
                                            Grid.Row="1" Grid.Column="2"
                                            Content="Resolve" 
                                            Width="80" 
                                            Height="32"
                                    Style="{StaticResource DefaultButton}"
                                            Margin="0,0,0,8"
                                    Click="ResolveMacButton_Click"/>

                                    <CheckBox x:Name="MacFallbackCheckBox" 
                                              Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                              Content="Enable Manual MAC Entry (Fallback Mode)"
                                              Style="{StaticResource DefaultCheckBox}"
                                              Margin="0,0,0,8"
                                              Checked="MacFallbackCheckBox_Checked"
                                              Unchecked="MacFallbackCheckBox_Unchecked"/>

                                    <Label Grid.Row="3" Grid.Column="0" Content="Target Port:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Top"
                                           Margin="0,0,12,0"/>
                                    <Grid Grid.Row="3" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="TargetPortTextBox"
                                        Style="{StaticResource DefaultTextBox}"
                                                 Height="32"
                                                 Margin="0,0,8,0"
                                        Text="0"/>
                                        <ProgressBar x:Name="ScanProgressBar" 
                                                     Grid.Row="1"
                                                     Height="5" 
                                                     Margin="0,4,8,0"
                                           Visibility="Collapsed"/>
                            </Grid>
                                    <Button x:Name="ScanButton" 
                                            Grid.Row="3" Grid.Column="2"
                                            Content="Scan" 
                                            Width="80" 
                                            Height="32"
                                    Style="{StaticResource DefaultButton}"
                                    VerticalAlignment="Top"
                                    Click="ScanButton_Click"/>
                        </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Attack Configuration Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Attack Configuration" Style="{StaticResource CardHeaderStyle}"/>
                                <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Attack Type:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <ComboBox x:Name="AttackTypeComboBox" 
                                              Grid.Row="0" Grid.Column="1" 
                                              Style="{StaticResource DefaultComboBox}"
                                              Margin="0,0,0,8"
                                     SelectionChanged="AttackTypeComboBox_SelectionChanged"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Mbps:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                    <TextBox x:Name="MegabitsPerSecondTextBox" 
                                             Grid.Row="1" Grid.Column="1" 
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,0,0"
                                             PreviewTextInput="MegabitsPerSecondTextBox_PreviewTextInput"
                                             TextChanged="MegabitsPerSecondTextBox_TextChanged"
                                    Text="100"/>
                        </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,8,0,0">
                            <Button x:Name="StartButton" 
                                    Content="Start Attack" 
                                    Width="140" 
                                    Height="32"
                                    Style="{StaticResource PrimaryButton}"
                                    IsEnabled="False"
                                Click="StartButton_Click"/>
                            <Button x:Name="StopButton" 
                                    Content="Stop Attack" 
                                    Width="140" 
                                    Height="32"
                                    Margin="12,0,0,0" 
                                    IsEnabled="False"
                                Style="{StaticResource DefaultButton}"
                                Click="StopButton_Click"/>
                            <Button x:Name="TraceRouteButton" 
                                    Content="Trace Route" 
                                    Width="140" 
                                    Height="32"
                                    Margin="12,0,0,0"
                                Style="{StaticResource DefaultButton}"
                                Click="TraceRouteButton_Click"/>
                            <Button x:Name="NetworkScanButton" 
                                    Content="Network Scan" 
                                    Width="140" 
                                    Height="32"
                                    Margin="12,0,0,0"
                                Style="{StaticResource DefaultButton}"
                                Click="NetworkScanButton_Click"/>
                    </StackPanel>
                </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem x:Name="AdvancedTab" Header="Advanced Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,2,0,0" HorizontalAlignment="Stretch">
                    <StackPanel Grid.IsSharedSizeScope="True" HorizontalAlignment="Stretch">
                        <!-- Network Configuration Card -->
                        <Border Style="{StaticResource CardStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,12">
                            <StackPanel HorizontalAlignment="Stretch">
                                <TextBlock Text="Network Configuration" Style="{StaticResource CardHeaderStyle}"/>
                                <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="NIC:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                            <ComboBox x:Name="AdvNetworkInterfaceComboBox" 
                                      Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                      Style="{StaticResource DefaultComboBox}"
                                              Margin="0,0,0,8"
                                      SelectionChanged="NetworkInterfaceComboBox_SelectionChanged"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Source IP:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="AdvSourceIpTextBox" 
                                             Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,8,8"
                                    IsReadOnly="True"/>
                                    <Button x:Name="AdvRefreshSourceIpButton" 
                                            Grid.Row="1" Grid.Column="2"
                                            Content="Refresh" 
                                            Width="80" 
                                            Height="32"
                                            Style="{StaticResource DefaultButton}"
                                            Margin="0,0,0,8"
                                            Click="RefreshSourceIpButton_Click"
                                            ToolTip="Refresh source IP from selected network interface"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Source MAC:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="AdvSourceMacTextBox" 
                                             Grid.Row="2" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,0,8"
                                    IsReadOnly="True"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="Gateway IP:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                    <TextBox x:Name="AdvGatewayIpTextBox" 
                                             Grid.Row="3" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,0,0"
                                    IsReadOnly="True"/>
                        </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Target Configuration Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Target Configuration" Style="{StaticResource CardHeaderStyle}"/>
                                <Grid>
                            <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Target IP:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="AdvTargetIpTextBox" 
                                             Grid.Row="0" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,8,8"
                                    TextChanged="TargetIpTextBox_TextChanged"/>
                                    <Button x:Name="AdvPingButton" 
                                            Grid.Row="0" Grid.Column="2"
                                            Content="Ping" 
                                            Width="80" 
                                            Height="32"
                                    Style="{StaticResource DefaultButton}"
                                            Margin="0,0,0,8"
                                    Click="PingButton_Click"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="Target MAC:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="AdvTargetMacTextBox" 
                                             Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,8,8"
                                    IsReadOnly="True"
                                    TextChanged="TargetMacTextBox_TextChanged"/>
                                    <Button x:Name="AdvResolveMacButton" 
                                            Grid.Row="1" Grid.Column="2"
                                            Content="Resolve" 
                                            Width="80" 
                                            Height="32"
                                    Style="{StaticResource DefaultButton}"
                                            Margin="0,0,0,8"
                                    Click="ResolveMacButton_Click"/>

                                    <CheckBox x:Name="AdvMacFallbackCheckBox" 
                                              Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                              Content="Enable Manual MAC Entry (Fallback Mode)"
                                              Style="{StaticResource DefaultCheckBox}"
                                              Margin="0,0,0,8"
                                              Checked="MacFallbackCheckBox_Checked"
                                              Unchecked="MacFallbackCheckBox_Unchecked"/>

                                    <Label Grid.Row="3" Grid.Column="0" Content="Target Port:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Top"
                                           Margin="0,0,12,0"/>
                                    <Grid Grid.Row="3" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBox x:Name="AdvTargetPortTextBox"
                                        Style="{StaticResource DefaultTextBox}"
                                                 Height="32"
                                                 Margin="0,0,8,0"
                                        Text="0"/>
                                        <ProgressBar x:Name="AdvScanProgressBar" 
                                                     Grid.Row="1"
                                                     Height="5" 
                                                     Margin="0,4,8,0"
                                           Visibility="Collapsed"/>
                            </Grid>
                                    <Button x:Name="AdvScanButton" 
                                            Grid.Row="3" Grid.Column="2"
                                            Content="Scan" 
                                            Width="80" 
                                            Height="32"
                                    Style="{StaticResource DefaultButton}"
                                    VerticalAlignment="Top"
                                    Click="ScanButton_Click"/>
                        </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Attack Configuration Card -->
                        <Border Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Attack Configuration" Style="{StaticResource CardHeaderStyle}"/>
                                <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="Attack Type:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <ComboBox x:Name="AdvancedAttackTypeComboBox" 
                                              Grid.Row="0" Grid.Column="1"
                                              Style="{StaticResource DefaultComboBox}"
                                              Margin="0,0,0,8"
                                      SelectionChanged="AdvancedAttackTypeComboBox_SelectionChanged">
                                <ComboBoxItem Content="ARP Spoofing"/>
                                <ComboBoxItem Content="NMEA 0183 (UDP Unicast)"/>
                                <ComboBoxItem Content="NMEA 0183 (UDP Multicast)"/>
                                <ComboBoxItem Content="Modbus/TCP Flood (Read Requests)"/>
                            </ComboBox>

                            <Label Grid.Row="1" Grid.Column="0" Content="Mbps:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,8"/>
                                    <TextBox x:Name="AdvMegabitsPerSecondTextBox" 
                                             Grid.Row="1" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,0,8"
                                             PreviewTextInput="AdvMegabitsPerSecondTextBox_PreviewTextInput"
                                             TextChanged="AdvMegabitsPerSecondTextBox_TextChanged"
                                    Text="100"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="Spoofed MAC:" 
                                   Style="{StaticResource DefaultLabel}"
                                   VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                    <TextBox x:Name="SpoofedMacTextBox" 
                                             Grid.Row="2" Grid.Column="1"
                                    Style="{StaticResource DefaultTextBox}"
                                             Height="32"
                                             Margin="0,0,0,0"
                                    TextChanged="SpoofedMacTextBox_TextChanged"
                                    MaxLength="17"
                                    Text="12:34:56:78:90:AB"/>
                        </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right" 
                                    Margin="0,8,0,0">
                            <!-- Password Section -->
                            <StackPanel Margin="0,0,16,0">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Password:" 
                                           FontSize="14" 
                                           Foreground="#6B7280"
                                           Margin="0,0,8,0"
                                           Padding="0"
                                           VerticalAlignment="Center"/>
                                    <PasswordBox x:Name="AdvPasswordBox" 
                                                 Width="160" 
                                                 Height="32"
                                                 Margin="0,0,8,0"
                                                 VerticalContentAlignment="Center"
                                                 FontSize="14"
                                                 Padding="8,0"
                                                 PasswordChanged="PasswordBox_PasswordChanged"
                                                 KeyDown="PasswordBox_KeyDown"
                                                 ToolTip="Enter password to enable attack controls (Press Enter to validate)"/>
                                    <Button x:Name="AdvValidatePasswordButton"
                                            Content="Validate"
                                            Width="100"
                                            Height="32"
                                            FontSize="14"
                                            FontWeight="Medium"
                                            Style="{StaticResource DefaultButton}"
                                            Click="ValidatePasswordButton_Click"
                                            ToolTip="Click to validate password"/>
                                </StackPanel>
                                <!-- Inline Authentication Feedback -->
                                <TextBlock x:Name="PasswordFeedbackText"
                                           FontSize="11"
                                           Foreground="#DC2626"
                                           Margin="88,4,0,0"
                                           Visibility="Collapsed"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Attack Control Buttons Group -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                <Button x:Name="StartAdvancedAttackButton" 
                                        Content="Start Attack" 
                                        Width="140" 
                                        Height="32" 
                                        Style="{StaticResource PrimaryButton}"
                                        IsEnabled="False"
                                        Click="StartAdvancedAttack_Click"/>
                                <Button x:Name="StopAdvancedAttackButton" 
                                        Content="Stop Attack" 
                                        Width="140" 
                                        Height="32" 
                                        Margin="8,0,0,0" 
                                        IsEnabled="False"
                                        Style="{StaticResource PrimaryButton}"
                                        Click="StopAdvancedAttack_Click"/>
                            </StackPanel>
                            
                            <!-- Utility Buttons Group -->
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="TraceRouteAdvancedButton" 
                                        Content="Trace Route" 
                                        Width="120" 
                                        Height="32"
                                        Style="{StaticResource DefaultButton}"
                                        Click="TraceRouteButton_Click"/>
                                <Button x:Name="NetworkScanAdvancedButton" 
                                        Content="Network Scan" 
                                        Width="120" 
                                        Height="32"
                                        Margin="8,0,0,0"
                                        Style="{StaticResource DefaultButton}"
                                        Click="NetworkScanButton_Click"/>
                            </StackPanel>
                    </StackPanel>
                </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem x:Name="FirewallNetworksTab" Header="Reachability Tests">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Safety Disclaimer - Fixed at top of left panel -->
                    <Border Grid.Row="0" 
                            Style="{StaticResource CardStyle}" 
                            HorizontalAlignment="Stretch" 
                            Margin="0,0,0,12" 
                            Background="#FEF3C7" 
                            BorderBrush="#F59E0B">
                        <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#92400E" Margin="0">
                            <Run Text="⚠️ " FontWeight="Bold"/>
                            <Run Text="Use only on networks and systems you are explicitly authorized to test. This feature performs active scanning."/>
                        </TextBlock>
                    </Border>
                    
                    <!-- Scrollable Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,2,0,0" HorizontalAlignment="Stretch">
                        <StackPanel Grid.IsSharedSizeScope="True" HorizontalAlignment="Stretch" Margin="0,0,0,12">
                            <!-- Path Analysis Wizard Button -->
                            <Border Style="{StaticResource CardStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Reachability &amp; Path Analysis" Style="{StaticResource CardHeaderStyle}"/>
                                    <TextBlock Text="Guided wizard to analyze reachability and network path from your current location to a target network." 
                                               FontSize="14" Foreground="#6B7280" Margin="0,0,0,12" TextWrapping="Wrap"/>
                                    <Button x:Name="ReachabilityPathAnalysisButton" 
                                            Content="Reachability / Path Analysis..." 
                                            Width="220" Height="36" 
                                            Style="{StaticResource PrimaryButton}" 
                                            Click="ReachabilityPathAnalysisButton_Click"
                                            HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Border>

                            <!-- SNMP Walk Attack -->
                            <Border Style="{StaticResource CardStyle}" HorizontalAlignment="Stretch" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="SNMP Walk Attack" Style="{StaticResource CardHeaderStyle}"/>
                                    <TextBlock Text="Performs SNMP walk operations using 100 common community strings to test SNMP access." 
                                               FontSize="14" Foreground="#6B7280" Margin="0,0,0,12" TextWrapping="Wrap"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Label Grid.Row="0" Grid.Column="0" Content="Target IP:" Style="{StaticResource DefaultLabel}" VerticalAlignment="Center" Margin="0,0,12,8"/>
                                        <TextBox x:Name="SnmpWalkTargetIpTextBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource DefaultTextBox}" Height="32" Margin="0,0,0,8"/>

                                        <Label Grid.Row="1" Grid.Column="0" Content="SNMP Port:" Style="{StaticResource DefaultLabel}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <TextBox x:Name="SnmpWalkPortTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource DefaultTextBox}" Height="32" Text="161"/>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <Button x:Name="StartSnmpWalkButton" 
                                                Content="Start SNMP Walk" 
                                                Width="150" Height="36" 
                                                Style="{StaticResource PrimaryButton}" 
                                                Click="StartSnmpWalkButton_Click"
                                                Margin="0,0,8,0"/>
                                        <Button x:Name="StopSnmpWalkButton" 
                                                Content="Stop" 
                                                Width="100" Height="36" 
                                                Style="{StaticResource DefaultButton}" 
                                                Click="StopSnmpWalkButton_Click"
                                                IsEnabled="False"/>
                                    </StackPanel>
                                    <ProgressBar x:Name="SnmpWalkProgressBar" Height="6" Margin="0,12,0,0" Visibility="Collapsed" Maximum="100" Value="0"/>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Security Assessment Status -->
                    <Border Grid.Row="2" 
                            Style="{StaticResource CardStyle}" 
                            HorizontalAlignment="Stretch" 
                            Margin="0,12,0,0"
                            x:Name="SecurityAssessmentStatusBorder"
                            Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Security Assessment" Style="{StaticResource CardHeaderStyle}"/>
                            <TextBlock x:Name="SecurityAssessmentStatusTextBlock" 
                                       FontSize="14" 
                                       Foreground="#059669" 
                                       TextWrapping="Wrap"
                                       Margin="0,8,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Right Panel: Security Logs -->
        <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Log Header -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        Margin="12,0,12,12"
                        VerticalAlignment="Center">
                <TextBlock Text="Security Logs" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Margin="0,0,16,0"
                           VerticalAlignment="Center"
                           Foreground="#111827"/>
                <Button x:Name="TaskManagerButton"
                        Content="Task Manager"
                        Width="120"
                        Height="32"
                        VerticalAlignment="Center"
                        Style="{StaticResource DefaultButton}"
                        Click="TaskManagerButton_Click"/>
            </StackPanel>

            <!-- Log Content Card -->
            <Border Grid.Row="1" 
                    BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Background="White">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Note input section -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="NoteTextBox" 
                                     Grid.Column="0"
                                     Height="50"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Style="{StaticResource DefaultTextBox}"
                                     Text=""
                                     GotFocus="NoteTextBox_GotFocus"
                                     LostFocus="NoteTextBox_LostFocus"
                                 Margin="0,0,8,0"
                                     Foreground="Gray"/>
                            <Button x:Name="AddNoteButton"
                                    Grid.Column="1"
                                    Content="Add Note"
                                Width="100"
                                    Height="50"
                                    Style="{StaticResource DefaultButton}"
                                    Click="AddNoteButton_Click"/>
                        </Grid>
                        
                        <!-- Log output section -->
                    <Border Grid.Row="1" 
                            BorderBrush="#E5E7EB" 
                            BorderThickness="1" 
                            CornerRadius="6"
                            Background="#F9FAFB"
                            Margin="0,0,0,12">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                        <TextBox x:Name="LogTextBox" 
                                 IsReadOnly="True" 
                                 TextWrapping="Wrap"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontFamily="Consolas"
                                     FontSize="12"
                                     VerticalScrollBarVisibility="Disabled"/>
                        </ScrollViewer>
                    </Border>

                    <!-- Log action buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button x:Name="SaveLogButton"
                                Content="Save Log"
                                Width="100"
                                Height="32"
                                Margin="0,0,8,0"
                                Style="{StaticResource DefaultButton}"
                                Click="SaveLogButton_Click"/>
                        <Button x:Name="ClearLogButton"
                                Content="Clear Log"
                                Width="100"
                                Height="32"
                                Style="{StaticResource DefaultButton}"
                                Click="ClearLogButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
            </Grid>
        </Grid>
        
        <!-- Toast Container -->
        <StackPanel x:Name="ToastContainer"
                    Grid.Row="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    Margin="0,20,20,0"
                    Panel.ZIndex="9999"/>
        
        <!-- Sync Loading Overlay -->
        <Border x:Name="SyncLoadingOverlay"
                Grid.Row="0"
                Background="#80000000"
                Visibility="Collapsed"
                Panel.ZIndex="10000">
            <Border Background="White"
                    CornerRadius="8"
                    Padding="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    MinWidth="300">
                <StackPanel>
                    <TextBlock Text="Syncing to Cloud..."
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#111827"
                               Margin="0,0,0,12"
                               HorizontalAlignment="Center"/>
                    <ProgressBar x:Name="SyncProgressBar"
                                 IsIndeterminate="True"
                                 Height="6"
                                 Margin="0,0,0,12"/>
                    <TextBlock x:Name="SyncProgressText"
                               Text="Preparing sync..."
                               FontSize="12"
                               Foreground="#6B7280"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window> 
